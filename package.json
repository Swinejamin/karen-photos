{
  "name": "foresry-starter-blog-gatsby",
  "private": true,
  "description": "A simple starter blog to get up and developing quickly with Forestry & Gatsby",
  "license": "MIT",
  "version": "0.1.0",
  "author": "kendall strautman",
  "scripts": {
    "build": "gatsby build",
    "burn": "rm -rf node_modules && yarn install",
    "dev": "gatsby develop -o",
    "develop": "yarn dev",
    "format": "prettier --write src/**/*.{js,jsx}",
    "start": "yarn dev",
    "serve": "gatsby serve",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\"",
    "forestry-preview": "gatsby develop -p 8080 -H 0.0.0.0"
  },
  "dependencies": {
    "gatsby": "^2.13.9",
    "gatsby-image": "^2.2.8",
    "gatsby-plugin-react-helmet": "^3.1.0",
    "gatsby-plugin-sass": "^2.1.0",
    "gatsby-plugin-sharp": "^2.2.3",
    "gatsby-remark-images": "^3.1.3",
    "gatsby-remark-normalize-paths": "^1.0.0",
    "gatsby-remark-relative-images": "^0.2.2",
    "gatsby-source-filesystem": "^2.1.2",
    "gatsby-transformer-json": "^2.2.18",
    "gatsby-transformer-remark": "^2.6.1",
    "gatsby-transformer-sharp": "^2.2.1",
    "gatsby-transformer-yaml": "^2.2.4",
    "node-sass": "^4.12.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "stylelint-scss": "^3.12.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "babel-preset-gatsby": "^0.2.22",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.18.2",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.1"
  },
  "keywords": [
    "gatsby",
    "forestry"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/forestryio/brevifolia-gatsby-forestry"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "./**/!(*eslintrc).{js}": [
      "yarn eslint ",
      "yarn run prettier --list-different"
    ],
    "./**/*.{scss}": [
      "stylelint --syntax scss",
      "yarn run prettier --list-different"
    ],
    "./**/*.{json}": [
      "yarn run prettier --list-different"
    ]
  }
}
